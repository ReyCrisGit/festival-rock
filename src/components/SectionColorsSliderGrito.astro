---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<section class="min-h-auto overflow-hidden">
  <div class="grid place-items-center">
    <div class="absolute">
      <h2 class="uppercase text-[3vw] font-semibold relative">{title}</h2>
    </div>
    <div class="w-full object-cover">
      <slot name="bgText" />
    </div>
  </div>
  <article class="grid place-items-center">
    <div class="absolute max-xl:w-5/6 w-2/4">
      <slot />
    </div>
    <div class="w-full object-cover">
      <slot name="bgSlider" />
    </div>
  </article>
</section>
