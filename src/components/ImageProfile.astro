---
import { Image } from "astro:assets";

interface Props {
  name: string;
  urlImage: string;
}
const { name, urlImage } = Astro.props;
---

<div class="grid justify-items-center text-center mb-6">
  <div>
    <Image
      src={urlImage}
      alt={name}
      width={256}
      height={256}
      quality={80}
      class="rounded-full bg-black size-64 max-md:size-56  flex items-center object-cover border-4 border-white"
    />
  </div>
  <p class="text-blue-dark text-3xl max-md:text-2xl text-wrap">{name}</p>
</div>
