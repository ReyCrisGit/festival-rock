---
import { Image } from "astro:assets";

interface Props {
  name: string;
  urlImage: string;
}
const { name, urlImage } = Astro.props;
---

<div class="grid justify-items-center text-center mb-6">
  <div>
    <Image
      src={urlImage}
      alt={name}
      width={256}
      height={256}
      quality={80}
      class="rounded-full bg-black w-64 h-64 flex items-center z-20 object-cover border-4 border-white"
    />
  </div>
  <span class="text-blue-dark text-3xl">{name}</span>
</div>
