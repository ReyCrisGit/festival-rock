---
import FondoGritoElectro from "../assets/fondos/FondoGritoElectro.astro";
import FondoGritoElectroText from "../assets/fondos/FondoGritoElectroText.astro";
import SectionColorsSliderGrito from "./SectionColorsSliderGrito.astro";
import SliderImages from "./SliderImages.astro";
import SliderImagesButton from "./SliderImagesButton.astro";
import SliderImagesContent from "./SliderImagesContent.astro";
---

<SectionColorsSliderGrito title="Grito Electro">
  <FondoGritoElectroText slot="bgText" />
  <SliderImages>
    <SliderImagesContent
      urlImage={import.meta.env.BASE_URL + "/img/Recurso1.png"}
      slot="images"
    />
    <SliderImagesContent
      urlImage={import.meta.env.BASE_URL + "/img/Recurso2.png"}
      slot="images"
    />
    <SliderImagesContent
      urlImage={import.meta.env.BASE_URL + "/img/gritoElectroImg1.webp"}
      slot="images"
    />
    <SliderImagesButton slot="button" />
    <SliderImagesButton slot="button" />
    <SliderImagesButton slot="button" />
  </SliderImages>
  <FondoGritoElectro slot="bgSlider" />
</SectionColorsSliderGrito>
